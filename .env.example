# Application Configuration
APP_NAME=STL-PINN Processor
DEBUG=false
ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Database Configuration
DATABASE_URL=postgresql://jayrk:postgres@localhost:5432/stl_pinn
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=12345

# File Processing Settings (use comma-separated values for lists)
MAX_FILE_SIZE_MB=500
SUPPORTED_FORMATS="stl,ply,obj,step,stp"
TEMP_DIR=/tmp/stl_processing
OUTPUT_DIR=./outputs

# PINN Configuration
PINN_MODEL_PATH=./models/pinn_checkpoint.pt
PINN_BATCH_SIZE=1024
PINN_EPOCHS=1000
PINN_LEARNING_RATE=0.001
PHYSICS_LOSS_WEIGHT=1.0
BOUNDARY_LOSS_WEIGHT=10.0

# LLM Configuration
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=2048

# Monitoring
ENABLE_METRICS=true
SENTRY_DSN=your_sentry_dsn_here
WANDB_PROJECT=stl-pinn-processing

# FreeCAD Paths (adjust for your system)
FREECAD_LIB_PATH=/Applications/FreeCAD.app/Contents/Resources/lib
FREECAD_PYTHON_PATH=/Applications/FreeCAD.app/Contents/Resources/lib/python3.11/site-packages
FREECAD_BIN_PATH=/Applications/FreeCAD.app/Contents/Resources/bin

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
